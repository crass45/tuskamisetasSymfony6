                                            <label for="telefono" style="font-size: 12px; color: #666; font-weight: bold;">{% trans %}Teléfono{% endtrans %} *</label>
                                            <input type="tel" id="telefono" name="_telefono" required class="form-control" placeholder="{% trans %}Tu teléfono{% endtrans %}"/>
                                        </div>

