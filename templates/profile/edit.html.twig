{% extends "base.html.twig" %}

{% block baseBody %}
    <div style="background-color:white; padding:30px;">
        <h2 class="titulo">{% trans %}Datos Personales{% endtrans %}</h2>
        <div class="texto" style="opacity:0.8">
            {# Aquí puedes poner un texto de introducción #}
        </div>

        <div class="col-lg-6 col-lg-push-4 login-form">
            {# MIGRACIÓN: Se usa la nueva ruta 'app_profile_edit' para la acción del formulario #}
            {{ form_start(form, {
                'action': path('app_profile_edit', {'_locale': app.request.locale}),
                'method': 'POST',
                'attr': {'class': 'form-group', 'id': 'contactoForm'}
            }) }}

            {{ form_widget(form) }}

            <div style="width: 100%; text-align: right; margin-top: 30px;">
                <button type="submit" class="btn btn-default" style="width: 100%;">
                    {% trans %}Guardar Cambios{% endtrans %}
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    <script>
        $(document).ready(function () {
            const paisSelected = $('#contacto_direccionFacturacion_paisBD');
            const provinciasSelectDiv = $("#contacto_direccionFacturacion_provinciaBD").parent();
            const provinciasInputDiv = $("#contacto_direccionFacturacion_provincia").parent();

            function toggleProvinciaFields() {
                const codigoSeleccionado = paisSelected.val();

                // 73 es el ID para España en tu base de datos antigua
                if (codigoSeleccionado == 73) {
                    provinciasSelectDiv.show();
                    provinciasInputDiv.hide();
                } else {
                    provinciasSelectDiv.hide();
                    provinciasInputDiv.show();
                }
            }

            // Lógica inicial para asegurar que España esté seleccionada si no hay nada
            if (!paisSelected.val()) {
                paisSelected.val(73);
            }
            toggleProvinciaFields();

            paisSelected.on('change', function () {
                const paisSelector = $(this);
                const provinciasSelect = $("#contacto_direccionFacturacion_provinciaBD");

                toggleProvinciaFields();

                // Si el país no es España, no hacemos la llamada AJAX
                if (paisSelector.val() != 73) {
                    provinciasSelect.html('<option value> Escribe tu provincia manualmente ...</option>');
                    return;
                }

                // MIGRACIÓN: La URL de la API ahora es dinámica y usa la nueva ruta
                const url = "{{ path('api_get_country_provinces', {id: 'PAIS_ID'}) }}".replace('PAIS_ID', paisSelector.val());

                $.ajax({
                    url: url,
                    type: "GET",
                    dataType: "JSON",
                    success: function (provincias) {
                        provinciasSelect.html('');
                        provinciasSelect.append('<option value> Selecciona una provincia de ' + paisSelector.find("option:selected").text() + ' ...</option>');

                        $.each(provincias, function (key, provincia) {
                            provinciasSelect.append('<option value="' + provincia.id + '">' + provincia.name + '</option>');
                        });
                    },
                    error: function (err) {
                        console.error("Ha ocurrido un error al cargar las provincias.");
                    }
                });
            });

            // Para frameworks como Chosen.js si los usas
            if ($.fn.chosen) {
                $('.chosen').chosen();
            }
        });
    </script>
{% endblock %}
