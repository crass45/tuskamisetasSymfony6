                <tr>
                    <td style="background-image: url({{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('images/repeat_mail.png') }}); background-repeat: repeat-x; height: 20px; width: 600px"></td>
                </tr>
                <tr style="background-color: white">
                    <td>
                        <table>
                            <tr>
                                <td style="padding:20px; ">
                                    <img class="fix"
                                         src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('pollo.jpeg') }}"
                                         width="90" height="auto" border="0" alt="logo tuskamisetas"/>
                                </td>
                                <td style="text-align: right; padding: 20px;">
                                    <span class="h1 innerpadding" style="color: #ff9000; text-align: right">
                                    {{ emailTitulo }}
