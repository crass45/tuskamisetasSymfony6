                                        </a>
                                    </td>
                                {% endif %}
                                {% if empresa.twitter != "" %}
                                    <td width="37" style="text-align: center; padding: 0 10px 0 10px;">
                                        <a href="{{ empresa.twitter }}" target="_blank">
                                            <img src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('images/twitter.png') }}"
                                                 height="17px" width="auto" alt="Twitter" border="0"
                                                 style="height: 17px; width: auto"/>
                                        </a>
                                    </td>
                                {% endif %}
                                {#{% if empresa.instagram != "" %}#}
                                {#<td width="37" style="text-align: center; padding: 0 10px 0 10px;">#}
                                {#<a href="{{ empresa.instagram }}" target="_blank">#}
                                {#<img src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('images/instagram.png') }}"#}
                                {#height="17px" width="auto" alt="Facebook" border="0"#}
                                {#style="height: 17px; width: auto"/>#}
                                {#</a>#}
                                {#</td>#}
                                {#{% endif %}#}
                                {% if empresa.youtube != "" %}
                                    <td width="37" style="text-align: center; padding: 0 10px 0 10px;">
                                        <a href="{{ empresa.youtube }}" target="_blank">
                                            <img src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('images/google+.png') }}"
                                                 height="17px" width="auto" alt="Facebook" border="0"
                                                 style="height: 17px; width: auto"/>
                                        </a>
                                    </td>
                                {% endif %}
                                {% if empresa.pinterest != "" %}
                                    <td width="37" style="text-align: center; padding: 0 10px 0 10px;">
                                        <a href="{{ empresa.pinterest }}" target="_blank">
                                            <img src="{{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('images/pinterest.png') }}"
                                                 height="17px" width="auto" alt="Facebook" border="0"
                                                 style="height: 17px; width: auto"/>
                                        </a>
                                    </td>
                                {% endif %}
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td style="background-image: url({{ app.request.scheme ~'://' ~ app.request.httpHost ~ asset('images/repeat_mail_abajo.png') }}); background-repeat: repeat-x; height: 20px; width: 600px"></td>
    </tr>
</table>
