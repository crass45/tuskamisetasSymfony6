                </tr>


        </td>
    </tr>
    <tr>
        <td bgcolor="white" class="innerpadding">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td class="bodycopy">
                        <b>{{ emailSubtitulo }}<br></b>
                        {% block texto %}
                            {{ emailTexto | raw }}
                        {% endblock %}
                    </td>
                </tr>
            </table>
        </td>
    </tr>

    {% block cuerpo %}
    {% endblock %}

    <tr>
        <td class="footer" bgcolor="white">
